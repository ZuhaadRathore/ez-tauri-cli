{
  "name": "ez-tauri",
  "version": "1.0.0",
  "type": "module",
  "description": "A simple, powerful Tauri boilerplate for rapid desktop app development",
  "author": "Tavuc <tavuc123@hotmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/ZuhaadRathore/ez-tauri",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZuhaadRathore/ez-tauri.git"
  },
  "bugs": "https://github.com/ZuhaadRathore/ez-tauri/issues",
  "keywords": [
    "tauri",
    "desktop-app",
    "boilerplate",
    "react",
    "typescript",
    "rust",
    "cross-platform",
    "starter-template",
    "vite",
    "modern-stack"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "node scripts/ez-dev.mjs",
    "build": "node scripts/ez-build.mjs",
    "preview": "vite preview",
    "tauri": "node scripts/ez-tauri.mjs",
    "tauri:dev": "node scripts/ez-tauri.mjs dev",
    "tauri:build": "node scripts/ez-tauri.mjs build",
    "prepare": "husky",
    "lint": "node scripts/ez-lint.mjs",
    "lint:fix": "node scripts/ez-lint.mjs --fix",
    "format": "node scripts/ez-lint.mjs --fix",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "db:up": "node scripts/ez-db.mjs up",
    "db:down": "node scripts/ez-db.mjs down",
    "db:logs": "node scripts/ez-db.mjs logs",
    "db:reset": "node scripts/ez-db.mjs reset",
    "docker:up": "node scripts/ez-docker.mjs up",
    "docker:down": "node scripts/ez-docker.mjs down",
    "docker:logs": "node scripts/ez-docker.mjs logs",
    "docker:build": "node scripts/ez-docker.mjs build",
    "docker:restart": "node scripts/ez-docker.mjs restart",
    "test": "node scripts/ez-test.mjs",
    "test:ui": "node scripts/ez-test.mjs ui",
    "test:run": "node scripts/ez-test.mjs run",
    "test:coverage": "node scripts/ez-test.mjs coverage",
    "test:desktop": "node scripts/ez-test.mjs desktop",
    "test:e2e": "node scripts/ez-test.mjs e2e",
    "typecheck": "tsc --noEmit",
    "dev:tauri:e2e": "node scripts/run-tauri-dev.mjs",
    "tauri:test:build": "npm run build && cargo build --manifest-path src-tauri/Cargo.toml",
    "test:desktop:watch": "WDIO_LOG_LEVEL=silent wdio run wdio.config.ts --watch",
    "changelog": "node scripts/generate-changelog.mjs",
    "changelog:check": "node scripts/generate-changelog.mjs --check",
    "release:prepare": "npm run changelog && git add CHANGELOG.md",
    "version:patch": "npm version patch && npm run release:prepare",
    "version:minor": "npm version minor && npm run release:prepare",
    "version:major": "npm version major && npm run release:prepare",
    "template:process": "node scripts/process-template.mjs",
    "build:prod": "NODE_ENV=production npm run build",
    "build:staging": "NODE_ENV=staging npm run build",
    "deploy:staging": "node scripts/ez-deploy.mjs staging",
    "deploy:prod": "node scripts/ez-deploy.mjs production",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@types/dompurify": "^3.2.0",
    "dompurify": "^3.2.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.1",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@rollup/rollup-win32-x64-msvc": "^4.52.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.18",
    "@tauri-apps/cli": "^2.8.4",
    "@tauri-apps/cli-win32-x64-msvc": "^2.8.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@wdio/cli": "^9.19.2",
    "@wdio/local-runner": "^9.19.2",
    "@wdio/mocha-framework": "^9.19.2",
    "@wdio/spec-reporter": "^9.19.2",
    "autoprefixer": "^10.4.21",
    "chromedriver": "^140.0.3",
    "edgedriver": "^6.1.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vitest": "^3.2.4",
    "webdriverio": "^9.19.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
